# App
NODE_ENV=production
PORT=4000
API_PREFIX=api
CORS_ORIGINS=https://your-domain.com

# Database (credentials must match MONGO_ROOT_USERNAME/PASSWORD below)
MONGODB_URI=mongodb://CHANGE_ME_USER:CHANGE_ME_PASSWORD@localhost:27017/sports-shop?authSource=admin

# MongoDB root credentials (used by docker-compose for container init)
MONGO_ROOT_USERNAME=CHANGE_ME_USER
MONGO_ROOT_PASSWORD=CHANGE_ME_PASSWORD

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# JWT (generate strong random secrets, min 64 chars)
JWT_ACCESS_SECRET=CHANGE_ME_GENERATE_STRONG_SECRET_64_CHARS_MIN
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_ANOTHER_STRONG_SECRET_64_CHARS_MIN
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# S3/MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=CHANGE_ME_MINIO_ACCESS
S3_SECRET_KEY=CHANGE_ME_MINIO_SECRET
S3_BUCKET=sports-shop
S3_REGION=us-east-1

# MinIO root credentials (used by docker-compose for container init)
MINIO_ROOT_USER=CHANGE_ME_MINIO_ACCESS
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_SECRET

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
MAIL_FROM='"SportShop" <noreply@sportshop.ru>'

# Throttle
THROTTLE_TTL=60
THROTTLE_LIMIT=60
